@page "/admin/coffes/details/{id:long}"
<h3 class="bg-info text-white text-center p-1">Thông tin </h3>
<table class="table table-sm table-bordered table-striped">
 <tbody>
 <tr><th>ID</th><td>@Book.BookID</td></tr>
 <tr><th>Tên hạt </th><td>@Book.TenLoaiHat</td></tr>
 <tr><th>Thông tin  </th><td>@Book.AnhHienThi</td></tr>
 <tr><th>Giới thiệu </th><td>@Book.GioiThieu</td></tr>
 <tr><th>Giá </th><td>@Book.Gia.ToString("C")</td></tr>
 </tbody>
</table>
<NavLink class="btn btn-warning" href="@EditUrl">Chỉnh sửa </NavLink>
<NavLink class="btn btn-secondary" href="/admin/coffes">Trở lại </NavLink>
@code {
 [Inject]
 public ICafeRepository Repository { get; set; }
 [Parameter]
 public long Id { get; set; }
 public Book Book { get; set; }
 protected override void OnParametersSet()
 {
 Book = Repository.Books.FirstOrDefault(b => b.BookID == Id);
 }
 public string EditUrl => $"/admin/coffes/edit/{Book.BookID}";
}